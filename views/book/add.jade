h1 添加新的图书
.outline
  form#photoupload(method='post', action='/fileupload')
    img#upphoto(height='50', src='', alt='')
    label#status 请选择文件
    input(type='file', name='photo')
    button#photosubmit(type='submit') 上传
  form(method='post', action='/books/insert')
    input(name='book[image]', type='hidden')
    label 书名
    br
    input(name='book[bookname]', type='text')
    br
    label 描述
    br
    textarea(name='book[bookdesc]', type='text', cols='60', rows='10')
    br
    label 新旧程度
    br
    input(name='book[bookoldrate]', type='text')
    span %
    br
    label 价格
    br
    input(name='book[bookmoney]', type='text')
    label 元
    br
    label 数量
    br
    input(name='book[bookcount]', type='text')
    br
    label 分类
    br
    select(name='book[bookclass]', id='class')
      for item in category
        option(value=item.name)= item.name
    select(name='book[booksubclass]', id='subclass')
      for item in category[0].subtag
        option(value=item.name)= item.name
    br
    input(name='book[bookimage]', id='bookimage', type='hidden', value='/images/default.jpg')
    button(type='submit') 添加
